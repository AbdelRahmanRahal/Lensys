{
	"manifest_version": 3,
	"name": "Moodle Syntax Highlight",
	"description": "Syntax highlight for Moodle because the university or whatever are too lazy to do it themselves.",
	"version": "1.0",
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		  },
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"contextMenus"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  }
}